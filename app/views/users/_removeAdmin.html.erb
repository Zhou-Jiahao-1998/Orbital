<script>
  function student() {
    if (confirm("Are you sure you want to make this a STUDENT account?")) {
        document.getElementById("role").value = "student";
      }
  }

  function organisation() {
    if (confirm("Are you sure you want to make this an ORGANISATION account?")) {
        document.getElementById("role").value = "organisation";
      }
  }
</script>

<%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error")%> prohibited this user from being saved:</h2>

            <ul>
                <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="field form-group" hidden>
        <%= form.label :role %><br />
        <%= form.text_field :role, autocomplete: "role", class:"form-control", required: true, id:"role" %>
        </div>
    <div class="actions" onclick="student()">
        <%= form.submit "Turn into Student", class: 'btn btn-primary'%>
    </div>
    <br />
    <div class="actions" onclick="organisation()">
        <%= form.submit "Turn into Organisation", class: 'btn btn-primary'%>
    </div>
    <br />
    <div class="actions">
        <%= link_to 'Cancel', users_path, class: 'btn btn-secondary'%>
    </div>

<% end %>